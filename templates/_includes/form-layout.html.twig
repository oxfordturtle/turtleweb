{%- block form_row -%}
  {%- set widget_attr = {} -%}
  {%- if help is not empty -%}
    {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
  {%- endif -%}
  <div class="form-group{% if errors|length > 0 %} has-errors{% endif %}"{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
    {{- form_label(form) -}}
    {{- form_help(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_errors(form) -}}
  </div>
{%- endblock form_row -%}
