{# twigs: form #}

<div class="form">
  {{ form_start(form) }}
    <fieldset>
      <div class="form-legend">File name</div>
      <div class="form-inputs">
      {{ form_row(form.name) }}
      </div>
    </fieldset>
    <fieldset>
      <div class="form-legend">OneDrive/Google Docs link</div>
      <div class="form-inputs">
      {{ form_row(form.link) }}
      </div>
    </fieldset>
    <div class="form-buttons">
      <button type="submit" class="green-button">Edit</button>
    </div>
  {{ form_end(form) }}
</div>
